make "pi 3.141593
make "diameter quotient 360 :pi
make "radius quotient :diameter 2
make "halfradius quotient :diameter 4
make "quarterradius quotient :diameter 8

to face
  pu
  home
  lt 90
  fd :diameter
  rt 90
  pd
  repeat 360 [fd 2 rt 1]
  pu
  home
end

to eyes
  pu
  home
  lt 90
  fd :radius
  rt 90
  fd :quarterradius
  lt 90
  pd
  repeat 360 [fd 0.5 rt 1]
  pu
  rt 180
  fd :diameter
  rt 180
  pd
  repeat 360 [fd 0.5 rt 1]
  pu
  home
end

to happy
  pu
  home
  rt 180
  fd :radius
  rt 90
  repeat 60 [fd 1 rt 1]
  rt 180
  pd
  repeat 120 [fd 1 lt 1]
  pu 
  home
end

to neutral
  pu
  home
  rt 180
  fd :radius
  rt 90
  fd :radius
  rt 180
  pd
  fd :diameter
  pu
  home
end

to sad
  pu
  home
  rt 180
  fd :halfradius
  rt 90
  repeat 60 [fd 1 lt 1]
  rt 180
  pd
  repeat 120 [fd 1 rt 1]
  pu 
  home
end

to happyface
  cs face eyes happy
end

to neutralface 
  cs face eyes neutral
end

to sadface
  cs face eyes sad
end
